\subsection{Architecture Logique (MVC)}

\begin{figure}[H]
\centering
\begin{tikzpicture}[
    node distance=2cm,
    box/.style={rectangle, draw, fill=lightblue, text width=3cm, text centered, rounded corners, minimum height=1cm},
    arrow/.style={->, >=stealth, thick}
]
    % Couche View
    \node[box, fill=lightgreen] (view) {VIEW\\React Components};
    
    % Couche Controller
    \node[box, below of=view, fill=lightyellow] (controller) {CONTROLLER\\Express Routes};
    
    % Couche Model
    \node[box, below of=controller, fill=lightblue] (model) {MODEL\\Mongoose Schemas};
    
    % Couche Services
    \node[box, right of=controller, xshift=3cm] (services) {SERVICES\\Business Logic};
    
    % Base de données
    \node[box, below of=model, fill=lightgray] (db) {DATABASE\\MongoDB};
    
    % Flèches
    \draw[arrow] (view) -- (controller) node[midway, right] {Requêtes HTTP};
    \draw[arrow] (controller) -- (view) node[midway, left] {Réponses JSON};
    \draw[arrow] (controller) -- (model) node[midway, right] {Query/Update};
    \draw[arrow] (model) -- (controller) node[midway, left] {Documents};
    \draw[arrow] (controller) -- (services);
    \draw[arrow] (services) -- (controller);
    \draw[arrow] (model) -- (db);
    \draw[arrow] (db) -- (model);
\end{tikzpicture}
\caption{Architecture logique MVC de FleetPulse}
\end{figure}

