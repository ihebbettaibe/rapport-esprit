\section{Diagramme de Cas d'Utilisation Global}

\begin{figure}[H]
    \centering
    \fbox{\includegraphics[width=0.95\textwidth]{use_case_diagram.png}}
    \caption{Diagramme des cas d'utilisation principaux du système FleetPulse}
\end{figure}

\begin{keyfeaturebox}
\textbf{Synthèse des Cas d'Utilisation par Acteur :}

\textbf{Super Administrateur :}
\begin{itemize}[nosep]
    \item Gérer les comptes entreprises et utilisateurs
    \item Superviser l'ensemble de la plateforme
    \item Accéder aux rapports consolidés multi-entreprises
    \item Configurer les paramètres système globaux
    \item Consulter les audit logs
\end{itemize}

\textbf{Administrateur / Manager :}
\begin{itemize}[nosep]
    \item Gérer les véhicules et chauffeurs
    \item Planifier et suivre les trajets
    \item Valider les congés et traiter les réclamations
    \item Consulter les tableaux de bord et rapports
    \item Communiquer avec l'équipe
\end{itemize}

\textbf{Chauffeur :}
\begin{itemize}[nosep]
    \item Consulter les trajets assignés
    \item Mettre à jour le profil personnel
    \item Soumettre des demandes de congé
    \item Échanger via la messagerie interne
    \item Utiliser le chatbot d'assistance
\end{itemize}

\textbf{Fonctionnalités Communes :}
\begin{itemize}[nosep]
    \item S'authentifier de manière sécurisée
    \item Échanger des messages en temps réel
    \item Recevoir et gérer les notifications
    \item Consulter l'aide contextuelle et le chatbot
\end{itemize}
\end{keyfeaturebox}

